[user]
  name = Tyom Semonov
  email = inspiro@gmail.com

[core]
  excludesfile = ~/.dotfiles/gitignore
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
  st = status
  ci = commit
  co = checkout
  unstage = reset HEAD --
  staged = diff --staged
  sub = submodule update --init --recursive
  who = shortlog -s --
  branches = for-each-ref --sort=-committerdate refs/heads/ --format='%(refname): %(committerdate:relative), %(authorname) - %(subject)' | sed 's/refs\/heads\///g'

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
  interactive = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
	default = current
