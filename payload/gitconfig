[core]
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore
  pager = delta --plus-color="#012800" --minus-color="#340001"
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
  a  = add
  aa = add --all
  ap = add --patch
  c  = commit
  ca = commit -a
  cm = commit -m
  amend = commit --amend
  b = branch
  co = checkout
  cp = cherry-pick
  d  = diff --color-words
  unstage = reset HEAD --
  staged = diff --staged
  who = shortlog --summary --numbered --no-merges
  sub = submodule update --init --recursive
  show-stat = show --name-only
  push = push -u
  loc = ! git ls-files | grep -Ev 'ios/Pods|.jpg|.png|.lock|.jar|.bat|.otf|.woff' | xargs wc -l

  # Stash
#  st = stash
#  stp = stash pop

  # Status
  s = status
  ss = status -sb

  # Logging
  hist = log --graph --pretty=custom           # Show custom graph
  l = log --pretty=custom                      # Show custom log
  ll = log --stat --abbrev-commit
  lc = shortlog --summary --numbered           # List contributors
  lg1 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)—%an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  lg2 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold  yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)— %an%C(reset)' --abbrev-commit
  lg = "!git log --pretty=format:'%h|%cr|%an|%s|%d' | while IFS='|' read hash time author message branch; do printf \"$(color 3)%s $(color 240)%-16s $(color 253)%-16s $(color 245)%-90s $(color 2)%s\n\" \"$hash\" \"$time\" \"$author\" \"$message\" \"$branch\"; done | more -R"

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = blue 
  untracked = white bold 

[push]
  default = current

[pull]
  rebase = true

[fetch]
  prune = true

[branch]
  autosetuprebase = always

[credential]
  helper = osxkeychain

[interactive]
  diffFilter = delta --color-only

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process

[pretty]
  custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(white)%s %C(green)(%an)"
  #                     │        │            │            │             └─ author name
  #                     │        │            │            └─ message
  #                     │        │            └─ date (relative)
  #                     │        └─ decorations (branch, heads or tags)
  #                     └─ hash (abbreviated)

[include]
  path = ~/.gitconfig.local
